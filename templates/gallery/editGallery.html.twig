{% extends "base.html.twig" %}

{% block title %}MediaPhoto - CreateGallery{% endblock %}

{% block body %}

    <div class="container-create-gallery">
        <h1>Modifier une galerie</h1>
        <form action="/edit-gallery/edit/{{gallery.getId()}}" method="POST">
        <div class="titre-create-gallery">
            <label for="titre">Titre</label>
            <input type="text" id="titre" name="titre" placeholder="Saississez un titre" size="25" value="{{gallery.titre}}" required>
        </div>
        <div class="description-create-gallery">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="5" cols="25" required>{{gallery.description}}</textarea>
        </div>
        <div class="keywords-create-gallery">
            <label for="keywords">Mot clé</label>
            <input type="text" id="keywords" name="keywords" value="{{gallery.motcle}}" placeholder="Saississez un mot clé" size="25" required>
            {# <div class="keywords-list">
                <div class="one-keyword">
                    animal <a href="#"><img src="./img/croix.png" alt="croix"></a>
                </div>
                <div class="one-keyword">
                    chien <a href="#"><img src="./img/croix.png" alt="croix"></a>
                </div>
            </div> #}
        </div>
        <div class="radio-create-gallery">
            {% if gallery.getAcces() %}
            <input type="radio" id="radio-public" name="radio-accessibility" value="public" checked>
            <label for="public">Public</label>
            <input type="radio" id="radio-prive" name="radio-accessibility" value="prive">
            <label for="prive">Privé</label>
            {% else %}
            <input type="radio" id="radio-public" name="radio-accessibility" value="public">
            <label for="public">Public</label>
            <input type="radio" id="radio-prive" name="radio-accessibility" value="prive" checked>
            <label for="prive">Privé</label>
            {% endif %}

        </div>
        <div class="creer-gallery-btn">
            <input type="submit" id="submit-button" value="Modifier">
        </div>
    </div>

   
{% endblock %}