{% extends "base.html.twig" %}

{% block title %}MediaPhoto - Description{% endblock %}

{% block body %}
    <a href="/">Accueil</a> >> <a href="/gallery/{{image.getGalerie.id}}">Galerie : {{image.getGalerie.titre}}</a> >> <a href="/image/{{image.getId_img}}">Image : {{image.titre}}</a>

    <div class="container-page-img">
        <div class="header-img">
            <div class="img-container">
                <img src="data:{{image.getImgMime()}};base64,{{image.getBlobToString()}}"/>
            </div>
            <div class="description-container">
                <div class="description">
                    <h1>{{image.titre}}</h1>
                    <p class="description-img">{{image.getImg_desc}}</p>
                    <div class="keywords">
                        <p class="text-keyword">Mots cl√©s : </p>
                        <p class="keyword-1 keyword">{{image.getMotCle}}</p>
                    </div>
                    <div class="info">
                        <p class="date-img">{{image.getDateString(image.getDate())}}</p>
                        <p class="user-img">Par: Moi</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}